@model IEnumerable< UserViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Users</h1>
<hr />

@if (Model.Count() >0)
{
    @*Create Table*@
    <table class="table table-striped table-hover table-bordered">
        <thead >
            <tr>
                <th>@Html.DisplayNameFor(i=>i.UserName)</th>
                <th>@Html.DisplayNameFor(i=>i.DisplayName)</th>
                <th>@Html.DisplayNameFor(i=>i.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(i=>i.Email)</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.DisplayName</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.Email</td>
                    <td>@string.Join(",",user.Roles.ToList())</td>
                    <td>
                        <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@user.Id"><i class="fas fa-pen"></i>Edit</a>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>
}
else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>There Is No Records !!</h2>
    </div>
}
@section Scripts
{
    <partial name ="_ValidationScriptsPartial" />
}

